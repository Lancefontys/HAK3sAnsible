vrrp_instance VI_1 {
    state {{ 'MASTER' if inventory_hostname == groups['masters'][0] else 'BACKUP' }}
    interface {{ vip_interface }}
    virtual_router_id 51
    priority {{ '100' if inventory_hostname == groups['masters'][0] else ('90' if inventory_hostname == groups['masters'][1] else '80') }}
    advert_int 1
    authentication {
        auth_type PASS
        auth_pass 42
    }
    virtual_ipaddress {
        {{ vip }}
    }
}
